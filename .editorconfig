# Dynatron's editorconfig standard v1.0.0 see https://dynatronsoftware.com/780/editorconfig?uuid=fe2e9366-0781-e619-1748-59d60d7965d5
# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Global settings
[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Ensure 2 space indent
[*.{rb,ru,yaml,yml}]
indent_size = 2
indent_style = space

# Ensure 4 spaces
[*.{py,php,html,htm,css,scss,sass,js,json,markdown,md}]
indent_size = 4
indent_style = space

# Ensure 4 tabs
[*.{conf,cfg,ini}]
indent_size = 4
indent_style = tab
